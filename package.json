{
	"name": "mahjong-calculator",
	"version": "1.0.1",
	"type": "module",
	"main": "dist/mahjong-score-service.cjs.js",
	"module": "dist/mahjong-score-service.es.js",
	"types": "dist/types/main.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite",
		"clean:types": "rimraf dist/types",
		"build": "npm run clean:types && npm run build:types && vite build",
