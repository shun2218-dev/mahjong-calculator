		"lint": "biome lint --write .",
		"fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.8",
		"@vitest/ui": "^4.0.8",
		"rimraf": "^6.1.2",
		"tsc-alias": "^1.8.16",
		"typescript": "~5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.8"
	}
